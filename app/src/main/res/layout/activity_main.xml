<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/fond"
>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="354dp" app:srcCompat="@drawable/logo" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView"/>
    <TextView
            android:text="Are you... ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="25sp"
            android:fontFamily="@font/intro" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="CUSTOMER"
            android:layout_width="272dp"
            android:layout_height="71dp"
            android:id="@+id/button" android:textSize="25sp"
            android:textColor="@android:color/background_light" android:background="@color/coolbrown"
            android:fontFamily="@font/robotomedium" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="RELATIVE"
            android:layout_width="272dp"
            android:layout_height="71dp"
            android:id="@+id/button2" android:textSize="25sp"
            android:textColor="@android:color/background_light" android:background="@color/coolbrown"
            android:fontFamily="@font/robotomedium" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
    />
</android.support.constraint.ConstraintLayout>